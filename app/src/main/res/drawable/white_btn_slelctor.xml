<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape
            android:shape="rectangle">

            <gradient
                android:angle="90"
                android:endColor="@color/btn_back_pressed"
                android:startColor="@color/btn_back_pressed"

                android:type="linear" />

            <corners
                android:radius="21dp" />

        </shape>
        <!-- #FB0707 -->
    </item>
    <item>
        <shape
            android:shape="rectangle">

            <gradient
                android:angle="90"
                android:endColor="@color/white"
                android:startColor="@color/white"
                android:type="linear" />

            <corners
                android:radius="21dp" />

        </shape>
    </item>
</selector>